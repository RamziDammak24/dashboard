{
  "name": "electron-nextjs-app",
  "version": "0.1.0",
  "description": "Electron.js desktop application with Next.js frontend",
  "main": "public/electron.js",
  "homepage": "file://",
  "scripts": {
    "dev": "next dev && electron .",
    "build": "next build",
    "build:electron": "electron-builder",
    "start": "next start",
    "export": "next export",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run export && npm run build:electron"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "firebase": "^11.0.0",
    "lucide-react": "^0.454.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "cross-env": "^10.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-devtools-installer": "^3.2.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.0"
  }
}
